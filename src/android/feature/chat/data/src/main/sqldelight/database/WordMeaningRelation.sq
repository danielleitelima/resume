CREATE TABLE WordMeaningRelation (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    wordId TEXT NOT NULL,
    wordMeaningId TEXT NOT NULL
);

insert:
INSERT INTO WordMeaningRelation (wordId, wordMeaningId)
SELECT :wordId, :wordMeaningId
WHERE NOT EXISTS (
    SELECT 1 FROM WordMeaningRelation
    WHERE wordId = :wordId AND wordMeaningId = :wordMeaningId
);

getByWordId:
SELECT *
FROM WordMeaningRelation
WHERE wordId = :wordId;
